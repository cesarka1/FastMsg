<tr id="<%= dom_id(tutor) %>">
  <td><%= tutor.nome %></td>
  <td><%= tutor.email %></td>
  <td><%= tutor.cpf %></td>
  <td>
    <%= link_to "Ver", tutor_path(tutor), class: "btn btn-info btn-sm" %>
    <%= link_to "Editar", edit_tutor_path(tutor), class: "btn btn-warning btn-sm" %>
    <%= link_to "Excluir", tutor_path(tutor), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class: "btn btn-danger btn-sm" %>
  </td>
</tr>
