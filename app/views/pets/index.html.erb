<% content_for :title, "Pets" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Pets</h1>
    <%= link_to "Novo Pet", new_pet_path, class: "btn btn-primary" %>
  </div>

  <div class="card">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover table-striped mb-0">
          <thead class="table-light">
            <tr>
              <th scope="col">Nome</th>
              <th scope="col">Espécie</th>
              <th scope="col">Tutor</th>
              <th scope="col" class="text-center">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% if @pets.any? %>
              <% @pets.each do |pet| %>
                <tr>
                  <td><%= pet.try(:nome) || "Nome não disponível" %></td>
                  <td><%= pet.try(:especie) || "Espécie não informada" %></td>
                  <td><%= pet.try(:tutor).try(:nome) || "Tutor não associado" %></td>
                  <td class="text-center">
                    <%= link_to "Ver", pet, class: "btn btn-sm btn-info text-white" %>
                    <%= link_to "Editar", edit_pet_path(pet), class: "btn btn-sm btn-warning" if defined?(edit_pet_path) %>
                    <%= button_to "Excluir", pet, method: :delete, class: "btn btn-sm btn-danger d-inline", form: { style: 'display: inline', data: { turbo_confirm: 'Tem certeza?' } } if pet.respond_to?(:destroy) %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="5" class="text-center py-3">Nenhum pet cadastrado.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
