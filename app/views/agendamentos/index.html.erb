<% content_for :title, "Agendamentos" %><div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Agendamento</h1>
    <%= link_to "Novo Agendamento", new_agendamento_path, class: "btn btn-primary", data:{ turbo_frame: dom_id(Agendamento.new)} %>
  </div>

  <%= turbo_frame_tag Agendamento.new %>


    <div class="card">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover table-striped mb-0">
            <thead class="table-light">
              <tr>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">CPF</th>
                <th scope="col" class="text-center">Ações</th>
              </tr>
            </thead>
            <tbody id="Agendamentos">
              <% if @agendamentos.any? %>
                  <%= render @agendamentos %>         
              <% else %>
                <tr>
                  <td colspan="4" class="text-center py-3">Nenhum Agendamento cadastrado.</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

</div>
