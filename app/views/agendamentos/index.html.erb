<% content_for :title, "Agendamentos" %><div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Agendamento</h1>
    <%= link_to "Novo Agendamento", new_agendamento_path, data: { turbo_frame: "modal" }, class: "btn btn-primary" %>
  </div>

  <%= turbo_frame_tag Agendamento.new %>


    <div class="card">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover table-striped mb-0">
            <thead class="table-light">
              <tr>
                <th scope="col">Veterinario</th>
                <th scope="col">Pet</th>
                <th scope="col">Tutor</th>
                 <th scope="col">Data e Hora </th>
                <th scope="col" class="text-center">Ações</th>
              </tr>
            </thead>
            <tbody id="agendamentos">
              <% if @agendamentos.any? %>
                <% @agendamentos.each do |agendamento| %>
                  <%= render partial: "agendamentos/agendamento", locals: { agendamento: agendamento, show_actions: true } %>
                <% end %>       
              <% else %>
                <tr id="no-agendamentos">
                  <td colspan="5" class="text-center py-3">Nenhum Agendamento cadastrado.</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

</div>
