<tr id="<%= dom_id(veterinario) %>">
  <td><%= veterinario.nome %></td>
   <td><%= veterinario.try(:crmv) || "CRMV nÃ£o informado" %></td>
  <td><%= veterinario.especialidade %></td>
  <td><%= veterinario.telefone %></td>
  <% if local_assigns[:show_actions] %>
     <td class="text-center">
      <%= link_to "Ver", veterinario_path(veterinario), data: { turbo_frame: "modal" },  class: "btn btn-info btn-sm" %>
      <%= link_to "Editar", edit_veterinario_path(veterinario), data: { turbo_frame: "modal" },  class: "btn btn-warning btn-sm" %>
      <%= link_to "Excluir", veterinario_path(veterinario), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class: "btn btn-danger btn-sm" %>
    </td>
  <% end %>
</tr>
