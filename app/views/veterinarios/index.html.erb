<% content_for :title, "Veterinários" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Veterinários</h1>
    <%= link_to "Novo Veterinário", new_veterinario_path, data: {turbo_frame: "modal"}, class: "btn btn-primary" %>
  </div>

  <div class="card">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover table-striped mb-0">
          <thead class="table-light">
            <tr>
              <th scope="col">Nome</th>
              <th scope="col">CRMV</th>
              <th scope="col">Especialidade</th>
              <th scope="col">Telefone</th>
              <th scope="col" class="text-center">Ações</th>
            </tr>
          </thead>
          <tbody id="veterinarios">
            <% if @veterinarios.any? %>
              <% @veterinarios.each do |veterinario| %>
                   <%= render partial: "veterinarios/veterinario", locals: { veterinario: veterinario, show_actions: true } %>
               <% end %> 
            <% else %>
              <tr>
                <td colspan="6" class="text-center py-3">Nenhum veterinário cadastrado.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>